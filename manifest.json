{
    "manifest_version": 2,
    "name": "마우스 클릭 좌표 저장 익스텐션",
    "version": "1.0",
    "description": "마우스 클릭으로 좌표 저장하는 익스텐션",
    "permissions": ["activeTab", "storage", "tabs"],
    "background": {
      "scripts": ["background.js"]
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "browser_action": {
      "default_icon": {
        "48": "images/icon48.png"
      },
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
